<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parent"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorIntro"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:tag="small">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true">

            <LinearLayout
                android:id="@+id/expressiveOne"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/ivlike"
                    android:layout_width="82dp"
                    android:layout_height="76dp"
                    android:contentDescription="like"
                    android:src="@drawable/like"
                    android:layout_marginBottom="10dp"/>

                <ImageView
                    android:id="@+id/ivyes"
                    android:layout_width="82dp"
                    android:layout_height="76dp"
                    android:contentDescription="yes"
                    android:src="@drawable/yes"
                    android:layout_marginBottom="10dp"/>

                <ImageView
                    android:id="@+id/ivadd"
                    android:layout_width="82dp"
                    android:layout_height="76dp"
                    android:contentDescription="more"
                    android:src="@drawable/more" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/expressiveTwo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="16dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/ivdislike"
                    android:layout_width="82dp"
                    android:layout_height="76dp"
                    android:contentDescription="dont like"
                    android:src="@drawable/dontlike"
                    android:layout_marginBottom="10dp"/>

                <ImageView
                    android:id="@+id/ivno"
                    android:layout_width="82dp"
                    android:layout_height="76dp"
                    android:contentDescription="no"
                    android:src="@drawable/no"
                    android:layout_marginBottom="10dp"/>

                <ImageView
                    android:id="@+id/ivminus"
                    android:layout_width="82dp"
                    android:layout_height="76dp"
                    android:contentDescription="less"
                    android:src="@drawable/less" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/relativeLayoutNavigation"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="-16dp">

                <ImageView
                    android:id="@+id/ivhome"
                    android:layout_width="80dp"
                    android:layout_height="88dp"
                    android:layout_centerHorizontal="true"
                    android:contentDescription="home"
                    android:src="@drawable/home_no_padding"
                    android:layout_marginLeft="25dp"/>

                <ImageView
                    android:id="@+id/keyboard"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_toRightOf="@+id/ivhome"
                    android:contentDescription="keyboard"
                    android:src="@drawable/keyboard_no_padding"
                    android:layout_marginLeft="25dp"/>

                <ImageView
                    android:id="@+id/ivback"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_toLeftOf="@+id/ivhome"
                    android:contentDescription="back"
                    android:src="@drawable/back_no_padding"
                    android:layout_marginLeft="25dp"/>
            </RelativeLayout>
        </RelativeLayout>

        <Button
            android:id="@+id/enterCategory"
            android:layout_width="200dp"
            android:layout_height="85dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="80dp"
            android:gravity="center"
            android:fontFamily="@fonts/EkMukta-SemiBold"
            android:text="ENTER CATEGORY"
            android:textSize="18dp" />

</RelativeLayout>
</RelativeLayout>