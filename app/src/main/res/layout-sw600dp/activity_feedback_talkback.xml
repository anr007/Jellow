<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7F3C6">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ScrollView
            android:id="@+id/scrollView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fadeScrollbars="false"
            android:fillViewport="false"
            android:layout_marginTop="19dp"
            android:layout_marginBottom="19dp"
            android:layout_marginLeft="30dp"
            android:layout_marginStart="30dp"
            android:layout_marginRight="16dp"
            android:layout_marginEnd="16dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/feedback_talkback_heading"
                    style="@style/defaultTextViewStyle"
                    android:fontFamily="@fonts/EkMukta-SemiBold"
                    android:layout_marginBottom="8dp"/>
                <TextView
                    android:id="@+id/tv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/easyToUse"
                    style="@style/defaultTextViewStyle"/>
                <Spinner
                    android:id="@+id/easytouse"
                    android:layout_width="90dp"
                    android:layout_height="40dp"
                    android:background="@drawable/custom_spinner_view"
                    android:textColor="@color/black_eighty"
                    android:layout_marginBottom="8dp"
                    android:importantForAccessibility="yes"/>
                <TextView
                    android:id="@+id/tv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/clearPictures"
                    style="@style/defaultTextViewStyle" />
                <Spinner
                    android:id="@+id/clearpictures"
                    android:layout_width="90dp"
                    android:layout_height="40dp"
                    android:background="@drawable/custom_spinner_view"
                    android:textColor="@color/black_eighty"
                    android:layout_marginBottom="8dp"/>
                <TextView
                    android:id="@+id/tv3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/clearVoice"
                    style="@style/defaultTextViewStyle"/>
                <Spinner
                    android:id="@+id/clearvoice"
                    android:layout_width="90dp"
                    android:layout_height="40dp"
                    android:background="@drawable/custom_spinner_view"
                    android:textColor="@color/black_eighty"
                    android:layout_marginBottom="8dp"/>
                <TextView
                    android:id="@+id/tv4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/easyToNavigate"
                    style="@style/defaultTextViewStyle" />
                <Spinner
                    android:id="@+id/navigate"
                    android:layout_width="90dp"
                    android:layout_height="40dp"
                    android:background="@drawable/custom_spinner_view"
                    android:textColor="@color/black_eighty"
                    android:layout_marginBottom="8dp"/>
                <TextView
                    android:id="@+id/tv5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="@string/commentSuggestions"
                    style="@style/defaultTextViewStyle"/>
                <EditText
                    android:id="@+id/comments"
                    android:layout_width="match_parent"
                    android:layout_height="?android:attr/actionBarSize"
                    android:layout_marginLeft="-2dp"
                    android:layout_marginStart="-2dp"
                    android:ems="10"
                    android:inputType="textMultiLine"
                    android:textSize="22sp"
                    android:imeOptions="actionDone"
                    android:layout_marginBottom="58dp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="48dp"/>
            </LinearLayout>
    </ScrollView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:background="#f7e2ac"
        android:gravity="center_vertical"
        android:importantForAccessibility="yes">
        <Button
            android:id="@+id/bSubmit"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="@string/submit"
            android:textSize="20sp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="30dp"
            android:layout_marginStart="30dp"/>
    </LinearLayout>
</RelativeLayout>