<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:id="@+id/main">
    <ImageView
        android:id="@+id/btnMoveLeft"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:onClick="changeDemoScreen"
        android:layout_gravity="start"
        android:paddingLeft="32dp"
        android:paddingStart="32dp"
        android:src="@drawable/ic_chevron_left"
        android:contentDescription="@null"
        tools:ignore="RtlSymmetry" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal">
        <TextView
            android:id="@+id/tx_downloadMsg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/txt_intro6_skipActiveTtsDesc"
            style="@style/defaultTextViewStyle"
            android:fontFamily="@font/mukta_semibold"
            android:paddingTop="10dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal">
                <TextView
                    android:id="@+id/tvtop"
                    android:layout_width="325dp"
                    android:layout_height="wrap_content"
                    android:minLines="2"
                    style="@style/defaultTextViewStyle"
                    android:textSize="18sp"
                    android:textAlignment="center"
                    android:text="@string/txt_intro6_ttsStep1"/>
                <ImageView
                    android:layout_width="170dp"
                    android:layout_height="270dp"
                    android:src="@drawable/gtts1"
                    tools:ignore="ContentDescription" />
                <Button
                    android:layout_margin="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:textSize="20sp"
                    android:text="@string/txt_intro6_activate"
                    android:onClick="getStarted1"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal">
                <TextView
                    android:id="@+id/tvtop1"
                    android:layout_width="400dp"
                    android:layout_height="wrap_content"
                    android:minLines="2"
                    style="@style/defaultTextViewStyle"
                    android:textSize="18sp"
                    android:textAlignment="center"
                    android:text="@string/txt_intro6_step2"/>
                <ImageView
                    android:layout_width="170dp"
                    android:layout_height="270dp"
                    android:src="@drawable/gtts2"
                    tools:ignore="ContentDescription" />
                <Button
                    android:layout_margin="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:textSize="20sp"
                    android:text="@string/txt_intro6_changeLang"
                    android:onClick="getStarted2"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginRight="16dp">
                <TextView
                    android:id="@+id/tvtop2"
                    android:layout_width="325dp"
                    android:layout_height="wrap_content"
                    android:minLines="2"
                    style="@style/defaultTextViewStyle"
                    android:textSize="18sp"
                    android:textAlignment="center"
                    android:text="@string/txt_intro6_step3"/>
                <ImageView
                    android:layout_width="170dp"
                    android:layout_height="270dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/gtts3"
                    tools:ignore="ContentDescription" />
                <Button
                    android:layout_margin="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:textSize="20sp"
                    android:text="@string/txt_intro6_download"
                    android:onClick="getStarted3"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <ImageView
        android:id="@+id/btnMoveRight"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:onClick="changeDemoScreen"
        android:layout_gravity="end"
        android:paddingRight="32dp"
        android:paddingEnd="32dp"
        android:src="@drawable/ic_chevron_right"
        android:contentDescription="@null"
        tools:ignore="RtlSymmetry" />
</FrameLayout>
